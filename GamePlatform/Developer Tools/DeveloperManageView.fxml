<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" prefWidth="800" prefHeight="600"
    style="-fx-background-color: #f5f5f5;"
    xmlns:fx="http://javafx.com/fxml" fx:controller="DeveloperManageController">
    
    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>
    
    <Label fx:id="titleLabel" text="Developer Management" 
        style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    
    <TabPane VBox.vgrow="ALWAYS">
        <Tab fx:id="usersTab" text="Users" closable="false">
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="refreshButton" text="Refresh"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button fx:id="addUserButton" text="Add User"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                    <Button fx:id="deleteUserButton" text="Delete User"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"
                        onAction="#handleDeleteUser"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="resetDatabaseButton" text="Reset Database"
                        style="-fx-background-color: #FF5722; -fx-text-fill: white;"
                        onAction="#handleResetDatabase"/>
                </HBox>
                
                <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID"/>
                        <TableColumn fx:id="usernameColumn" text="Username"/>
                        <TableColumn fx:id="emailColumn" text="Email"/>
                        <TableColumn fx:id="createdDateColumn" text="Created Date"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
        
        <Tab fx:id="reviewsTab" text="Reviews" closable="false">
            <TableView fx:id="reviewTable">
                <columns>
                    <TableColumn fx:id="reviewIdColumn" text="ID"/>
                    <TableColumn fx:id="reviewUserColumn" text="Username"/>
                    <TableColumn fx:id="gameNameColumn" text="Game"/>
                    <TableColumn fx:id="ratingColumn" text="Rating"/>
                    <TableColumn fx:id="reviewTextColumn" text="Review"/>
                    <TableColumn fx:id="reviewDateColumn" text="Date"/>
                </columns>
            </TableView>
        </Tab>
        
        <Tab fx:id="bugsTab" text="Bug Reports" closable="false">
            <TableView fx:id="bugTable">
                <columns>
                    <TableColumn fx:id="bugIdColumn" text="ID"/>
                    <TableColumn fx:id="bugUserColumn" text="Username"/>
                    <TableColumn fx:id="descriptionColumn" text="Description"/>
                    <TableColumn fx:id="statusColumn" text="Status"/>
                    <TableColumn fx:id="reportDateColumn" text="Report Date"/>
                </columns>
            </TableView>
        </Tab>
        
        <Tab fx:id="sqlTab" text="SQL Query" closable="false">
            <VBox spacing="10">
                <TextArea fx:id="sqlQueryArea" promptText="Enter SQL query here..."
                    prefHeight="200"/>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="executeButton" text="Execute"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                        onAction="#handleExecuteQuery"/>
                </HBox>
                <TableView fx:id="queryResultTable" VBox.vgrow="ALWAYS"/>
            </VBox>
        </Tab>
    </TabPane>
</VBox> 