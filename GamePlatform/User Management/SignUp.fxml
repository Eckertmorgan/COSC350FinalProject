<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" prefWidth="400" prefHeight="500"
    xmlns:fx="http://javafx.com/fxml" fx:controller="SignUpController">
    
    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>
    
    <Label fx:id="titleLabel" text="Sign Up" 
        style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    
    <TextField fx:id="usernameField" promptText="Username"/>
    <TextField fx:id="emailField" promptText="Email"/>
    
    <HBox spacing="10">
        <TextField fx:id="verificationCodeField" promptText="Verification Code" HBox.hgrow="ALWAYS"/>
        <Button fx:id="sendCodeButton" text="Send Code" onAction="#handleSendCode"/>
    </HBox>
    
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
    
    <Button fx:id="signUpButton" text="Sign Up" 
        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
        onAction="#handleSignUp"/>
</VBox> 