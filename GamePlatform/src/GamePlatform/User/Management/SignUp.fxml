<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" prefWidth="500" prefHeight="600"
    style="-fx-background-color: #f5f5f5;"
    xmlns:fx="http://javafx.com/fxml" fx:controller="SignUpController">
    
    <padding>
        <Insets top="40" right="50" bottom="40" left="50"/>
    </padding>
    
    <VBox alignment="CENTER" spacing="30" 
        style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>
        
        <Label fx:id="titleLabel" text="Create Account" 
            style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        
        <VBox spacing="20">
            <!-- Username Field -->
            <VBox spacing="5">
                <Label text="Username" 
                    style="-fx-text-fill: #666666; -fx-font-size: 14;"/>
                <TextField fx:id="usernameField" 
                    style="-fx-pref-height: 35; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dddddd; -fx-border-width: 1;"/>
            </VBox>
            
            <!-- Email Field -->
            <VBox spacing="5">
                <Label text="Email" 
                    style="-fx-text-fill: #666666; -fx-font-size: 14;"/>
                <HBox spacing="10">
                    <TextField fx:id="emailField" HBox.hgrow="ALWAYS"
                        style="-fx-pref-height: 35; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dddddd; -fx-border-width: 1;"/>
                    <Button fx:id="sendCodeButton" text="Send Code" onAction="#handleSendCode"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 13; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(33,150,243,0.3), 5, 0, 0, 0);"/>
                </HBox>
            </VBox>
            
            <!-- Verification Code Field -->
            <VBox spacing="5">
                <Label text="Verification Code" 
                    style="-fx-text-fill: #666666; -fx-font-size: 14;"/>
                <TextField fx:id="verificationCodeField" 
                    style="-fx-pref-height: 35; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dddddd; -fx-border-width: 1;"/>
            </VBox>
            
            <!-- Password Fields -->
            <VBox spacing="5">
                <Label text="Password" 
                    style="-fx-text-fill: #666666; -fx-font-size: 14;"/>
                <PasswordField fx:id="passwordField" 
                    style="-fx-pref-height: 35; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dddddd; -fx-border-width: 1;"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Confirm Password" 
                    style="-fx-text-fill: #666666; -fx-font-size: 14;"/>
                <PasswordField fx:id="confirmPasswordField" 
                    style="-fx-pref-height: 35; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dddddd; -fx-border-width: 1;"/>
            </VBox>
        </VBox>
        
        <Button fx:id="signUpButton" text="Create Account" onAction="#handleSignUp"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 15; -fx-font-weight: bold; -fx-background-radius: 25; -fx-pref-width: 200; -fx-pref-height: 40; -fx-effect: dropshadow(three-pass-box, rgba(76,175,80,0.3), 5, 0, 0, 0);"/>
        
        <Text style="-fx-fill: #999999; -fx-font-size: 12;" 
            text="By creating an account, you agree to our Terms of Service and Privacy Policy"/>
    </VBox>
</VBox> 