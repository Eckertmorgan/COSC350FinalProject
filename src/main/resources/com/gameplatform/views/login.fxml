<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gameplatform.controllers.LoginController">
    
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="UserName:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <HBox spacing="10" alignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="2">
            <Button text="Login" onAction="#handleLogin"/>
            <Button text="Sign Up" onAction="#handleSignUp"/>
        </HBox>
    </GridPane>
    
</VBox> 